@{
    ViewData["Title"] = "Services";
}
@model List<Product>;

<!-- ======= Services Section ======= -->
<section id="services" class="services section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
          
        </div>

        <div class="row gy-4">
            @foreach (var item in Model)
            {
                var photo = "../images/" + (item.Photo ?? "daisy7.jpeg");
                <div class="col">
                    <div class="card shadow-sm">
                        <img src="@photo" alt=" " height="350">
                        <div class="card-body">
                            <p class="card-text">category</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Add To Cart</a>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                </div>
                                <small class="text-body-secondary">price TND</small>
                            </div>
                        </div>
                    </div>
                </div>


            }

        </div>

    </div>
</section><!-- End Services Section -->