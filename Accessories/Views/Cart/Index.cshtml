<!-- Views/Cart/Index.cshtml -->
@model List<Accessories.Models.Cart>

<h2 style="color: #412C1F;">Your Shopping Cart</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-cartItemId="@item.Id">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p style="color:black">Your shopping cart is empty.</p>
}
