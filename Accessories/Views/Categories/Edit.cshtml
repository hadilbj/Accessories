@model Accessories.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color: #412C1F;">Edit Category</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />

            <div class="form-group">
                <label asp-for="CategoryName" class="control-label" style="color: #412C1F;">Category Name</label>
                <input asp-for="CategoryName" class="form-control" required />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryDescription" class="control-label" style="color: #412C1F;">Category Description</label>
                <textarea asp-for="CategoryDescription" class="form-control" rows="4"></textarea>
                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryPhoto" class="control-label" style="color: #412C1F;">Category Photo</label>
                <input asp-for="CategoryPhoto" class="form-control" />
                <span asp-validation-for="CategoryPhoto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" style="background-color: #412C1F; color: white;" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" style="background-color: green; color: white;"class="btn btn-secondary" >Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
