@model Accessories.Models.Category
@{
    ViewData["Title"] = "Delete";
}

<h1 style="color: #412C1F;" class="font-secondry">Delete Categories</h1>

<div>
    <h3 style="color: #412C1F;">Are you sure you want to delete this category?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="color: black;">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10" style="color: black;">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class="col-sm-2" style="color: black;">
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </dt>
        <dd class="col-sm-10" style="color: black;">
            @Html.DisplayFor(model => model.CategoryDescription)
