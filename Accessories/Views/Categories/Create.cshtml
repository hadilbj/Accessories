@model Accessories.Models.Category

@{
	ViewData["Title"] = "Create";
}

<h1 style="color: #412C1F;" class="font-secondry">Add category</h1>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group" style="color: #412C1F;">
				<label asp-for="CategoryName" class="control-label"></label>
				<input asp-for="CategoryName" class="form-control"/>
				<span asp-validation-for="CategoryName" class="text-danger"></span>
			</div>
			<div class="form-group" style="color: #412C1F;">
				<label asp-for="CategoryDescription" class="control-label"></label>
				<input asp-for="CategoryDescription" class="form-control"/>
				<span asp-validation-for="CategoryDescription" class="text-danger"></span>
			</div>
			<div class="form-group">
                <button type="submit" style="background-color: #412C1F; color: white;" class="btn btn-primary">Create</button>
            </div>
		</form>
	</div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}